                                    }
                            }

                        }

                    }

                }

            }

            if (ViewBag.debug) { Helpers.WriteToLog(Session["Username"].ToString(), Request.ServerVariables["REMOTE_ADDR"], "Get Form Data: End:" + cmd.CommandText + " @form_id=" + ViewBag.form_id + ", @record_id=" + ViewBag.record_id); }

