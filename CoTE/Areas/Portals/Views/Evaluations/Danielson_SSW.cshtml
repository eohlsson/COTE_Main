<br /><br />
    @Html.DropDownListFor(m => m.domain3_b, new SelectList(ratings), new { tabindex = 26 })


  3b &nbsp;Conducts multi-tiered school needs assessment</b>

  <b>

<br /><br />
    @Html.DropDownListFor(m => m.domain3_c, new SelectList(ratings), new { tabindex = 27 })


