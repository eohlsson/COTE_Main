<tr>
    <td colspan="4" align="center">

        @if (Model.position != null && Model.position == "C")
        {
            if (Model.eval_type != null && Model.eval_type == "M")
            {
                    <b>Midterm Summary:</b>@Html.DropDownListFor(m => m.summary, new SelectList(midterm_summary))
            }
            else
            {
                    <b>Final Summary:</b>@Html.DropDownListFor(m => m.summary, new SelectList(final_summary))
            }        
        }
            
        <br /><br />
        <b>Signature:</b>  @Html.CheckBoxFor(m => m.signature) 
        <br /><br /><b><i>Note:</i> You may save changes to this form if you plan to return to edit by clicking the Save button. Once you click the signature box you <b><font color="red">WILL NOT</font></b> be able to edit or make changes to this evaluation. <br />Please <b><font color="red">DO NOT</font></b> click on the signature box until you are absolutely sure that you don't want to edit this form again.</b>

        <br/><br/><input type="submit" value="Save" />&nbsp;&nbsp;<input type="button" value="Print" onclick="Print()"/>
